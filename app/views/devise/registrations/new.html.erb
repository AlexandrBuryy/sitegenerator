<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
       <form class="form-horizontal" >
        <div class="form-group col-sm-4 col-sm-offset-4">
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email', id: "inputEmail3"%>
            <%= f.text_field :username, autofocus: true, class: 'form-control', placeholder: 'Username'%>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password', id: "inputPassword3" %>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'repeat password', id: "inputPassword3"%>
            <div class="col-sm-12" id='loginout'>
            <%= f.submit "Sign up", class: 'btn btn-default form-control col-sm-2' %>
            </div>
        </div>
      </form>
<% end %>
